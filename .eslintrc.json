{
	"extends": ["eslint:recommended", "plugin:vue/recommended"],
	"plugins": ["vue"],
	"env": {
		"browser": true,
		"node"   : true,
		"es6"    : true
	},
	"parserOptions": {
		"sourceType": "module"
	},
	"rules": {
		"no-console"              : 0,
		"no-mixed-spaces-and-tabs": 0,
		"linebreak-style"         : ["error", "unix"]
	}
}
